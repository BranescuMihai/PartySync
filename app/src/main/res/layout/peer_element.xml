<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/peer_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/peer_item_image"
        android:paddingTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/peer_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/peer_item_image"
        android:layout_toRightOf="@id/peer_item_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="45dp"
        android:paddingStart="10dp"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/peer_item_switch"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>